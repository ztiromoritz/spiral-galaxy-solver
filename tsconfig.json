{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "allowJs": true,
      "checkJs": true, // for now
      "noImplicitAny": false, // for now
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "noEmit": true // ??
    },
    "include": [
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.d.ts", //"src/**/*.tsx",
      "src/**/*.vue"
    ],
    "exclude": ["node_modules", "dist"]
  }